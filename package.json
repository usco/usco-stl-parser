{
  "name": "usco-stl-parser",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/usco/usco-stl-parser.git"
  },
  "main": "src/index.js",
  "scripts": {
    "browserify": "browserify src/index.js -t babelify -t workerify -t browserify-shim --standalone stl-parser --exclude rx --outfile lib/stl-parser.js",
    "mocha": "mocha specs --compilers js:babel-core/register",
    "test": "npm run mocha",
    "build":"npm run browserify"
  },
  "dependencies": {
    "composite-detect": "0.0.3",
    "fast.js": "^0.1.1",
    "rx": "^4.0.7"
  },
  "browserify-shim": {
    "rx": "global:Rx"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "assert": "^1.3.0",
    "mocha": "^2.3.4",
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "workerify": "^0.3.0"
  }
