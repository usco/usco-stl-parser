{
  "name": "usco-stl-parser",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/usco/usco-stl-parser.git"
  },
  "main": "lib/server/index.js",
  "browser": "lib/browser/stl-parser.js",
  "dependencies": {
    "composite-detect": "0.0.3",
    "fast.js": "^0.1.1",
    "rx": "^4.0.7"
  },
  "devDependencies": {
    "assert": "^1.3.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "brfs": "^1.4.1",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "browserify-test": "^2.1.2",
    "mocha": "^2.3.4",
    "mochify": "^2.14.2",
    "workerify": "^0.3.0"
  },
  "scripts": {
    "browserify": "browserify src/index.js -t babelify -t workerify -t browserify-shim --standalone stl-parser --exclude rx --outfile lib/browser/stl-parser.js",
    "mocha": "mocha specs --compilers js:babel-core/register",
    "test": "npm run mocha",
    "test-client": "browserify-test --transform babelify --transform workerify --transform brfs ",
    "test-client2": "mochify --transform babelify --transform workerify --transform brfs",
    "build-brs": "npm run browserify",
    "build-srv": "babel -d lib/server src/",
    "build":"npm run build-srv && npm run build-brs",
    "release": "npm run release-patch",
    "release-patch": "git checkout master && release patch",
    "release-minor": "git checkout master && release minor",
    "release-major": "git checkout master && release major"
  },
  "browserify-shim": {
    "rx": "global:Rx"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
